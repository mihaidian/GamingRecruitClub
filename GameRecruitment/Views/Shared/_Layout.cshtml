<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GameRecruitment</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GameRecruitment.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a style=" font-size: 25px; font-family:Verdana; color:darkorchid "><img src="https://png.pngtree.com/png-clipart/20210311/original/pngtree-neon-game-zone-with-console-and-triangle-png-image_6030413.jpg" alt="GameZone" width="100" height="100">Game Recruitment Club</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                @if(User.Identity.IsAuthenticated)
                {
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between" style="font-family:Gabriola; font-size:30px ">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a style="font-weight:bold" class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Main Page</a>
                            </li>
                            <li class="nav-item">
                                <a style="font-weight:bold" class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy Policy</a>
                            </li>
                            <li class="nav-item">
                                <a style="font-weight:bold" class="nav-link text-dark" asp-area="" asp-controller="GameInfos" asp-action="Index">See all games</a>
                            </li>
                            <li class="nav-item">
                                <a style="font-weight:bold" class="nav-link text-dark" asp-area="" asp-controller="TesterInfos" asp-action="Index">See Testers to hire</a>
                            </li>
                            <li class="nav-item">
                                <a style="font-weight:bold" class="nav-link text-dark" asp-area="" asp-controller="DevInfos" asp-action="Index">See Game Devs to hire</a>
                            </li>
                            <li class="nav-item">
                                <a style="font-weight:bold;" class="nav-link text-dark" asp-area="" asp-controller="CompanyInfos" asp-action="Index">Verified Companies</a>
                            </li>
                            <li class="nav-item">
                                <a style="font-weight:bold;" class="nav-link text-dark" asp-area="" asp-controller="ContactUs" asp-action="Index">Contact Us</a>
                            </li>
                            <li class="nav-item">
                                <a style="font-weight:bold;" class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Logout">Sign out</a>
                            </li>
                            
                            
                        </ul>
                    </div>
                }
                else
                {
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between" style="font-family:Gabriola; font-size:30px">
                        <ul class="navbar-nav flex-grow-1">     
                            <li class="nav-item">
                                <a style="font-weight:bold" class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Main Page</a>
                            </li>
                            <li class="nav-item">
                                <a style="font-weight:bold" class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy Policy</a>
                            </li>
                            <li class="nav-item">
                                <a style="font-weight:bold;" class="nav-link text-dark" asp-area="" asp-controller="ContactUs" asp-action="Index">Contact Us</a>
                            </li>

                            <li class="nav-item">
                                <a style="font-weight:bold" class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Login">Sign in</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark">Public acces, you must sign in order to see all features.</a>
                            </li>
                            
                            </ul>
                            </div>
                }

            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container" style="color:#FD7B00">
            <b> &copy; 2023 - Game Recruitment Club - The best platform to find developers & testers for your game  - Read </b> <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy Policy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
